<div class="container">
  <div class="col-8 mx-auto">
    <h3 style="text-align: center;">for now your level in this <br> category is <strong><%= current_user.rank_category %></strong></h3>
    <p style="text-align: center; font-size: x-small; line-height: 2.7;">Let's select 2 actions that you want <br> to realize by clicking on em just below </p>
  </div>

  <% @actions.each do |action|%>
    <div class="card-category-card">
      <%= link_to action_path(action) do %>
        <div class= "card-img p-2">
         <div class="card-category-footer d-flex justify-content-between">
            <div class="d-flex justify-content-evenly card-category-co2">
              <i class="fa-solid fa-leaf"></i>
              <p class=""><%= action.carbongain.div(100_000) %> <p>kgCO2e</p></p>
            </div>
            <div class="card-category-level d-flex justify-content-around isDisabled">
              <p class="isDisabled"><%= action.level %></p>
            </div>
          </div>
        </div>
        <div class="card-bar-separator mb-1"></div>

        <div class="container">
          <h1><strong><%= action.title %></strong></h1> <!-- action title-->
          <h4 style="color: rgb(216, 176, 77);"><%= action.occurences %> times / week</h4><!-- action occurences-->
          <div class="">
            <p><%= action.description[0..90] %> ...</p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
